<script type="text/javascript">

function isValidRadio(radio) {
    var valid = false;
    for (var i = 0; i < radio.length; i++) {
        if (radio[i].checked) {
            return true;
        }
    }
    alert("Por favor, escolha uma das opções de avaliação.");
    return false;
}

function validateForm(form) {
	if (isValidRadio(form.relevance)) {
		return true;
	}
	return false;
}

</script>